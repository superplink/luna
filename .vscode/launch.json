{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Build and Run: debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/./build/debug/bin/tests.exe",
			"preLaunchTask": "Build All (debug)",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Build and Run: release",
			"type": "f5anything",
			"request": "launch",
			"preLaunchTask": "Build All (release)",
			"command": "${workspaceRoot}/./build/release/bin/tests.exe",
		},
		{
			"name": "Build and Run: dist",
			"type": "f5anything",
			"request": "launch",
			"preLaunchTask": "Build All (dist)",
			"command": "${workspaceRoot}/./build/dist/bin/tests.exe",
		},
	]
}